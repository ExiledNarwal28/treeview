    "lint:fix": "pnpm lint:code:fix && pnpm lint:i18n:fix",
    "lint:i18n": "eslint --ext .json --format node_modules/eslint-plugin-i18n-json/formatter.js translations/",
    "lint:i18n:fix": "eslint --fix --ext .json --format node_modules/eslint-plugin-i18n-json/formatter.js translations/"
  },
  "dependencies": {
    "expo-localization": "^14.0.0",
    "mobile-storage": "workspace:*",
    "react": "^18.2.0",
    "react-native": "^0.70.1"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-custom": "workspace:*",
    "eslint-plugin-i18n-json": "^4.0.0",
    "tsconfig": "workspace:*"
  }
}
