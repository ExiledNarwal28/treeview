{
  "name": "mobile-locales",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "lint": "pnpm lint:code && pnpm lint:i18n",
    "lint:code": "eslint ./*.{js,jsx,ts,tsx}",
