{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "web#build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"],
      "env": ["NODE_ENV", "VERCEL_URL", "RENDER_INTERNAL_HOSTNAME", "PORT"]
    },
    "mobile#build": {
      "dependsOn": ["^build"],
      "outputs": ["node_modules/.cache/metro/**"],
      "env": ["NODE_ENV", "VERCEL_URL", "PORT"]
    },
    "@acme/db#db:migrate:*": {
      "env": ["DATABASE_URL"],
      "dependsOn": []
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "storybook": {
      "outputs": []
    }
  }
}
