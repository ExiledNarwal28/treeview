{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "web#build": {
      "dependsOn": ["^build", "$NODE_ENV", "$VERCEL_URL", "$RENDER_INTERNAL_HOSTNAME", "$PORT"],
      "outputs": [".next/**"]
    },
    "mobile#build": {
      "dependsOn": ["^build", "$NODE_ENV", "$VERCEL_URL", "$PORT"],
      "outputs": ["node_modules/.cache/metro/**"]
    },
    "database#db:migrate:*": {
      "env": ["DATABASE_URL"]
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "storybook": {
      "outputs": []
    }
  }
}
