{
  "name": "treeview",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.9.5",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "format": "prettier --quiet \"**/*.{js,jsx,ts,tsx,md}\"",
    "format:fix": "prettier --quiet --write \"**/*.{js,jsx,ts,tsx,md}\"",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:staged": "lint-staged",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "turbo": "^1.5.1"
  },
  "lint-staged": {
    "apps/web/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix apps/web/**/*.{js,jsx,ts,tsx}"
    ],
    "apps/docs/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix apps/docs/**/*.{js,jsx,ts,tsx}"
    ],
    "packages/web-ui/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix packages/web-ui/**/*.{js,jsx,ts,tsx}"
    ],
    "*.{js,jsx,ts,tsx,json,css}": [
      "pnpm format:fix"
    ]
  }
}
