{
  "name": "treeview",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.9.5",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel --filter web... --filter mobile...",
    "dev:mobile": "turbo run dev --filter web... --filter mobile...",
    "dev:web": "turbo run dev --filter web...",
    "format": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md,yml}\"",
    "format:fix": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md,yml}\"",
    "lint": "pnpm run lint:root && turbo run lint",
    "lint:fix": "pnpm run lint:root:fix && turbo run lint:fix",
    "lint:root": "eslint ./*.{js,jsx,ts,tsx}",
    "lint:root:fix": "eslint ./*.{js,jsx,ts,tsx}",
    "lint:staged": "lint-staged",
    "prepare": "husky install",
    "storybook:mobile": "turbo run dev --scope mobile-storybook --no-deps",
    "storybook:web": "turbo run storybook --scope web-ui --no-deps",
    "yeet": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "eslint": "^8.23.1",
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "turbo": "^1.5.1"
  },
  "lint-staged": {
    "./*.{js,jsx,ts,tsx}": [
      "pnpm lint:root:fix"
    ],
    "apps/web/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix apps/web/**/*.{js,jsx,ts,tsx}"
    ],
    "apps/mobile/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix apps/mobile/**/*.{js,jsx,ts,tsx}"
    ],
    "apps/mobile-storybook/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix apps/mobile-storybook/**/*.{js,jsx,ts,tsx}"
    ],
    "packages/web-ui/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix packages/web-ui/**/*.{js,jsx,ts,tsx}"
    ],
    "packages/mobile-ui/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix packages/mobile-ui/**/*.{js,jsx,ts,tsx}"
    ],
    "packages/theme/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix packages/theme/**/*.{js,ts}"
    ],
    "packages/trpc/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix packages/trpc/**/*.{js,ts}"
    ],
    "**/*.{js,jsx,ts,tsx,json,css,md,yml}": [
      "pnpm format:fix"
    ]
  }
}
